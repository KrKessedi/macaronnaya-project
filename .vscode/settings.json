{
	"editor.wordWrap": "on",
	"editor.smoothScrolling": true,
	"editor.suggestSelection": "first",
	"explorer.compactFolders": false,
	"explorer.confirmDragAndDrop": false,
	"emmet.triggerExpansionOnTab": true,
	// "emmet.showExpandedAbbreviation": "never",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier.semi": false,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"editor.formatOnPaste": true,
	"prettier.jsxSingleQuote": true,
	"prettier.arrowParens": "avoid",
	"editor.fontSize": 14,
	// "editor.fontFamily": "Righteous, monospace",
	"editor.fontLigatures": true,
	"editor.detectIndentation": true,
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.codeActionsOnSave": {},
	"explorer.confirmDelete": false,
	"editor.formatOnSave": true,
	"files.autoSave": "off",
	"workbench.iconTheme": "material-icon-theme",
	"RainbowBrackets.depreciation-notice": true,
	"workbench.colorTheme": "Bearded Theme Black & Ruby",
	"diffEditor.ignoreTrimWhitespace": false,
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"workbench.sideBar.location": "right",
	"editor.minimap.enabled": false,
	"liveServer.settings.donotShowInfoMsg": true,
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"git.autofetch": true,
	"editor.renderWhitespace": "none",
	"files.associations": {
		"*.js": "javascript"
	},
	"gitlens.advanced.messages": {
		"suppressLineUncommittedWarning": true
	},
	"indentRainbow.colors": [
		"rgb(173, 218, 170)",
		"rgb(235, 221, 35)",
		"rgb(243, 55, 55)",
		"rgb(3, 70, 255)",
		"rgb(0, 255, 255)"
	],
	"indentRainbow.indicatorStyle": "light",
	"indentRainbow.lightIndicatorStyleLineWidth": 1.5,
	"color-highlight.markerType": "underline",
	"color-highlight.matchWords": true,

	"terminal.integrated.cursorStyle": "underline",
	"terminal.integrated.cursorWidth": 2,
	"terminal.integrated.customGlyphs": true,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.altClickMovesCursor": true,
	"terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
	"terminal.integrated.drawBoldTextInBrightColors": true,
	"files.exclude": {
		"**/node_modules": true,
		"**/.gitignore": true,
		"**/package-lock.json": true,
		"**/README.md": true,
		"**/desktop.ini": true,
		"**/yarn.lock": true
	},
	"editor.cursorBlinking": "expand",
	"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorStyle": "line",
	"editor.cursorWidth": 3,
	"editor.tabSize": 2,
	// "editor.hover.enabled": false,
	"editor.lineHeight": 20
}
